---
interface Props {
  title: string;
  description: string;
  price?: string;
  features: string[];
  ctaText: string;
  ctaHref: string;
  highlighted?: boolean;
  badge?: string;
  variant?: 'primary' | 'secondary' | 'default';
}

const { 
  title, 
  description, 
  price = "USD —", 
  features, 
  ctaText, 
  ctaHref, 
  highlighted = false,
  badge,
  variant = 'default'
} = Astro.props;

const borderClasses = {
  primary: "border-[#0F4C81]/40 bg-[#0F4C81]/10",
  secondary: "border-[#10B981]/40 bg-[#10B981]/10",
  default: "border-white/10 bg-white/5"
};

const buttonClasses = {
  primary: "bg-[#0F4C81] text-white hover:bg-[#0d3f6b]",
  secondary: "border-2 border-white/30 text-white hover:border-white/60 hover:bg-white/5",
  default: "bg-white text-[#0A0E1A] hover:bg-slate-100"
};
---

<div class={`flex h-full flex-col gap-4 rounded-2xl border ${borderClasses[variant]} p-6 shadow-lg transition hover:shadow-xl`}>
  <div>
    <div class="flex items-start justify-between">
      <div>
        <h3 class="text-xl font-semibold text-white">{title}</h3>
        <p class="text-sm text-slate-300 mt-1">{description}</p>
      </div>
      {badge && (
        <span class="rounded-full bg-[#10B981]/20 px-3 py-1 text-xs font-semibold text-[#10B981] whitespace-nowrap">
          {badge}
        </span>
      )}
    </div>
  </div>
  
  <div class="text-3xl font-bold text-white">
    {price}
    <span class="text-base font-medium text-slate-300"> / mes</span>
  </div>
  
  <ul class="space-y-2 text-sm text-slate-100 flex-grow">
    {features.map(feature => (
      <li class="flex gap-2">
        <span class="text-[#10B981] flex-shrink-0">●</span>
        <span>{feature}</span>
      </li>
    ))}
  </ul>
  
  <a
    href={ctaHref}
    class={`mt-auto inline-flex items-center justify-center rounded-md ${buttonClasses[variant]} px-4 py-2 text-sm font-semibold shadow transition focus:outline-none focus:ring-2 focus:ring-[#F59E0B] focus:ring-offset-2 focus:ring-offset-[#0A0E1A]`}
  >
    {ctaText}
  </a>
</div>
