---
interface Props {
  variant?: 'primary' | 'secondary' | 'cta';
  size?: 'sm' | 'md' | 'lg';
  type?: 'button' | 'submit' | 'reset';
  href?: string;
  class?: string;
}

const { 
  variant = 'primary', 
  size = 'md', 
  type = 'button',
  href,
  class: className = ''
} = Astro.props;

const sizeClasses = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3 text-base',
  lg: 'px-8 py-4 text-lg',
};

const variantClasses = {
  primary: 'bg-brand-blue hover:bg-brand-blue-light text-white shadow-lg hover:shadow-glow-blue',
  secondary: 'bg-transparent border-2 border-brand-green text-brand-green hover:bg-brand-green/10 hover:border-brand-green-light',
  cta: 'bg-gradient-to-r from-brand-amber to-brand-amber-dark text-white hover:from-brand-amber-light hover:to-brand-amber shadow-lg hover:shadow-glow-amber',
};

const baseClasses = 'inline-flex items-center justify-center gap-2 font-semibold rounded-lg transition-all duration-200 hover-lift focus-ring disabled:opacity-50 disabled:cursor-not-allowed';

const combinedClasses = `${baseClasses} ${sizeClasses[size]} ${variantClasses[variant]} ${className}`;

const Tag = href ? 'a' : 'button';
---

<Tag 
  href={href}
  type={!href ? type : undefined}
  class={combinedClasses}
>
  <slot />
</Tag>
