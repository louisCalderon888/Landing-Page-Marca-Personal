---
interface Props {
  variant?: 'primary' | 'secondary' | 'cta' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  type?: 'button' | 'submit' | 'reset';
  href?: string;
  target?: '_blank' | '_self';
  rel?: string;
  glow?: boolean;
  disabled?: boolean;
  class?: string;
}

const { 
  variant = 'primary', 
  size = 'md', 
  type = 'button',
  href,
  target,
  rel,
  glow = false,
  disabled = false,
  class: className = ''
} = Astro.props;

const sizeClasses = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3 text-base',
  lg: 'px-8 py-4 text-lg',
};

const variantClasses = {
  primary: 'bg-brand-blue hover:bg-brand-blue-light text-white shadow-lg hover:shadow-glow-blue',
  secondary: 'bg-transparent border-2 border-brand-green text-brand-green hover:bg-brand-green/10 hover:border-brand-green-light',
  cta: 'bg-gradient-to-r from-brand-green to-brand-green-dark text-white hover:from-brand-green-light hover:to-brand-green shadow-lg hover:shadow-glow-green',
  ghost: 'bg-transparent border border-dark-600 text-dark-300 hover:border-brand-blue hover:text-white',
};

const glowClass = glow ? 'btn-glow' : '';
const disabledClass = disabled ? 'opacity-50 cursor-not-allowed pointer-events-none' : '';

const baseClasses = 'inline-flex items-center justify-center gap-2 font-semibold rounded-lg transition-all duration-300 ease-out hover:-translate-y-0.5 focus-ring disabled:opacity-50 disabled:cursor-not-allowed cursor-pointer';

const combinedClasses = `${baseClasses} ${sizeClasses[size]} ${variantClasses[variant]} ${glowClass} ${disabledClass} ${className}`;

const Tag = href ? 'a' : 'button';
---

<Tag 
  href={href}
  type={!href ? type : undefined}
  target={target}
  rel={rel}
  class={combinedClasses}
  aria-disabled={disabled}
>
  <slot />
</Tag>

