---
interface Props {
  variant?: 'default' | 'premium' | 'transparent' | 'glass';
  hover?: boolean;
  glow?: 'blue' | 'green' | 'amber' | 'none';
  class?: string;
}

const { 
  variant = 'default', 
  hover = true,
  glow = 'blue',
  class: className = ''
} = Astro.props;

const variantClasses = {
  default: 'bg-dark-900/80 backdrop-blur-sm border border-dark-700',
  premium: 'bg-gradient-to-br from-brand-blue/10 via-dark-900/90 to-brand-green/5 border-2 border-brand-blue/50 backdrop-blur-xl',
  transparent: 'bg-dark-900/40 backdrop-blur-lg border border-dark-700/50',
  glass: 'glass-card',
};

const glowClasses = {
  blue: 'glass-card',
  green: 'glass-card glass-card-green',
  amber: 'glass-card glass-card-amber',
  none: '',
};

const hoverClasses = hover 
  ? 'hover:-translate-y-1 hover:shadow-2xl' 
  : '';

const baseClasses = 'rounded-xl p-6 transition-all duration-400 ease-out';

const combinedClasses = `${baseClasses} ${variantClasses[variant]} ${variant !== 'glass' ? glowClasses[glow] : ''} ${hoverClasses} ${className}`;
---

<div class={combinedClasses}>
  <slot />
</div>
