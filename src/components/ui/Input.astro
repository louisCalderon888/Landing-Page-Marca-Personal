---
interface Props {
  type?: 'text' | 'email' | 'tel' | 'textarea';
  name: string;
  placeholder?: string;
  required?: boolean;
  rows?: number;
  class?: string;
}

const { 
  type = 'text', 
  name, 
  placeholder,
  required = false,
  rows = 4,
  class: className = ''
} = Astro.props;

const baseClasses = 'w-full bg-dark-800 border border-dark-600 rounded-lg px-4 py-3 text-white placeholder:text-dark-500 focus:border-electric-blue focus:ring-2 focus:ring-electric-blue/20 focus:outline-none transition-all duration-200';

const combinedClasses = `${baseClasses} ${className}`;

const Tag = type === 'textarea' ? 'textarea' : 'input';
---

<Tag
  type={type !== 'textarea' ? type : undefined}
  name={name}
  placeholder={placeholder}
  required={required}
  rows={type === 'textarea' ? rows : undefined}
  class={combinedClasses}
/>
